{{!-- Primeiro formulário para enviar o e-mail --}}
{{#unless showCodeField}}
<form action="/funRecuperarSenha" method="POST">
    <div>
        <label for="email">Digite seu e-mail:</label>
        <input type="email" id="email" name="email" value="{{email}}" required>
    </div>

    {{#if error}}
        <p style="color:red;">{{error}}</p>
    {{/if}}
    {{#if success}}
        <p style="color:green;">{{success}}</p>
    {{/if}}

    <button type="submit">Enviar</button>
</form>
{{/unless}}

{{!-- Segundo formulário para validar o código --}}
{{#if showCodeField}}
<form action="/validaCodigo" method="POST">
    <!-- Campo oculto para passar o e-mail -->
    <input type="hidden" name="email" value="{{email}}">

    <div>
        <label for="codigo">Insira o código:</label>
        <input type="text" id="codigo" name="codigo" required>
    </div>

    {{#if codigoError}}
        <p style="color:red;">{{codigoError}}</p>
    {{/if}}

    <button type="submit">Validar Código</button>
</form>
{{/if}}
